{
    "manifest_version": 3,
    "name": "Webpage Highlighter",
    "version": "1.0",
    "description": "Highlight text, save it locally, and get quick summaries!",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["main.js"],
        "css": ["style.css"]
      }
    ],
    "action": {
      "default_popup": "index.html"
    }
  }
  